<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/customSelectableForegroundStyle">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null" />


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_icon"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:maxWidth="100dp"
            android:text="Observador"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!--<TextView-->
        <!--android:id="@+id/app_category17"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignWithParentIfMissing="false"-->
        <!--android:layout_below="@+id/app_name17"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:ellipsize="end"-->
        <!--android:gravity="center"-->
        <!--android:text="1 M down."-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:textColor="@android:color/darker_gray" />-->


        <TextView
            android:id="@+id/app_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/app_name"
            android:layout_toEndOf="@+id/user_avatar"
            android:layout_toRightOf="@+id/user_avatar"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="120dp"
            android:paddingLeft="2dp"
            android:text="Paulo Trezentos installed this"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

    </RelativeLayout>

</FrameLayout>