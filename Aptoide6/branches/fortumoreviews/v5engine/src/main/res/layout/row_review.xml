<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="120dp" android:layout_margin="5dp" >

    <RelativeLayout
        style="?attr/backgroundCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.makeramen.RoundedImageView
            android:id="@+id/app_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="5dp"

            app:riv_corner_radius="5dp"
            android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>



        <FrameLayout
            android:id="@+id/score"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/app_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/rating_shape">

            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_alignTop="@id/app_icon"
            android:layout_height="match_parent"  android:layout_toLeftOf="@id/score"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/score"
            android:layout_toRightOf="@id/app_icon">


            <TextView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_height="wrap_content" android:text="Sample Ttext" style="@style/TextAppearance.AppCompat.Medium"/>

            <LinearLayout
                android:layout_below="@id/app_name"
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="35dp">

                <com.makeramen.RoundedImageView
                    app:riv_corner_radius="70dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" android:id="@+id/avatar" />

                <TextView
                    android:id="@+id/reviewer"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:layout_width="match_parent" android:gravity="center_vertical" android:textSize="12sp"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </RelativeLayout>
        <TextView

            android:id="@+id/description"   android:maxLines="2" android:gravity="center_vertical" android:layout_toRightOf="@id/app_icon"
            android:layout_width="match_parent" android:layout_below="@id/content" android:ellipsize="end"
            android:layout_height="match_parent" android:text="Lorem ipsum dolor sit amet, debet veritus eu vim, eu mea volumus officiis democritum. Mea modus alterum scripserit an, cetero iudicabit mnesarchum quo an, mea ei alia etiam comprehensam. Ea mea probo dolor dicant. Mea clita graeci eu, odio facete eu duo, per ex clita voluptua delicata. Scripta insolens iracundia id pri, eros dicunt mea ut. Nisl sumo tation cu mel, an qui dictas nonumes vulputate.
Consul delectus temporibus an qui, vitae deserunt concludaturque ei has, nulla primis ius cu. Magna mollis doctus eam cu, alia maluisset ullamcorper ne usu. Laoreet molestiae nec no, cu sea quodsi gubergren, sadipscing disputationi reprehendunt id vis. Nibh mucius deterruisset ut his, eam ei unum aliquid. Vix quis saperet te, et suas efficiantur mei. Nam purto epicurei intellegebat te, omnium appellantur ad nec, pro magna adhuc ei."/>

    </RelativeLayout>

</FrameLayout>