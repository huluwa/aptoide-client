<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auto_update_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_bgd"
        android:padding="10dp" >

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/aptoide_update"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/custom_background_color"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/auto_updating"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/auto_updating"
            android:textColor="@color/dark_custom_gray"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>