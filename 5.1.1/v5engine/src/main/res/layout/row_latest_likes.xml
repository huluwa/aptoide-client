<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             style="?attr/customRowForeground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/backgroundCard"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="5dp">

        <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="6dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:text="Daniel Antonio" android:layout_toRightOf="@+id/user_taste"/>


        <TextView
                android:id="@+id/app_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Earn to die"
                android:layout_below="@+id/username" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_alignLeft="@+id/username"
                android:layout_alignStart="@+id/username"/>

        <TextView
                android:id="@+id/app_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1.2"
                android:layout_below="@+id/app_name" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_alignLeft="@+id/app_name"
                android:layout_alignStart="@+id/app_name"/>

        <ImageView
                android:id="@+id/user_taste"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/user_default"
                android:layout_gravity="right"
                android:layout_centerVertical="true"/>

    </RelativeLayout>
</FrameLayout>