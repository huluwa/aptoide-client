<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <Gallery
            android:id="@+id/gallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="5dp" />

    <TextView
            style="@style/titleLabel"
            android:text="@string/version_info"/>


    <LinearLayout
            android:id="@+id/version_info_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


        <TextView
                android:id="@+id/downloads_label"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Downloads: 16334"
                android:layout_gravity="center_horizontal|left"/>

        <TextView
                android:id="@+id/store_label"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall" android:text="Store: apps"
                android:layout_gravity="center_horizontal|left"/>

        <TextView
                android:id="@+id/publisher_label"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall" android:text="Publisher: King.com"
                android:layout_gravity="center_horizontal|left"/>

        <TextView
                android:id="@+id/size_label"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall" android:text="Size: 51,34M"
                android:layout_gravity="center_horizontal|left"/>

        <TextView
                android:id="@+id/rating_label"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Rating: 4.5/5"
                android:layout_gravity="center_horizontal|left"/>

        <TextView
                android:id="@+id/likes_label"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Likes: 45"
                android:layout_gravity="center_horizontal|left"/>

        <TextView
                android:id="@+id/dont_likes_label"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Don't Likes: 2"
                android:layout_gravity="center_horizontal|left"/>
    </LinearLayout>


    <TextView
            style="@style/titleLabel"
            android:text="@string/description" />

    <LinearLayout
            android:id="@+id/description_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/descript"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="5.0sp"
                android:paddingRight="5.0sp"
                android:paddingTop="10.0dip"
                />
    </LinearLayout>

    <ImageView
            android:id="@+id/show_all_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_arrow_down"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:contentDescription="@null"
            android:layout_gravity="right|center_vertical"/>

