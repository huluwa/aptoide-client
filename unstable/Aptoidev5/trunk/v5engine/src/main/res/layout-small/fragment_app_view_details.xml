    <TextView
            style="@style/titleLabel"
            android:text="What's new?"/>

    <LinearLayout
            android:id="@+id/whats_new_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/whats_new_descript"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="5.0sp"
                android:paddingRight="5.0sp"
                android:paddingTop="10.0dip"
                android:text="Tiffi tries to teach somebody a lesson in Cherry Chateau, the latest Candy Crush episode for players on the go! - With 485 sugary sweet levels."/>
    </LinearLayout>

    <ImageView
            android:id="@+id/show_all_whats_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_arrow_down"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:contentDescription="@null"
            android:layout_gravity="right|center_vertical"/>


    <TextView
            style="@style/titleLabel"
            android:text="@string/publisher"/>

    <TextView
            android:id="@+id/publisher_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="?attr/icWebSiteDrawable"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="2dp"
            android:gravity="center|left"
            android:clickable="true"
            android:focusable="true"
            android:autoLink="web"
            android:background="@drawable/highlight_overlay"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Visit web page: http://about.king.com/candy-crush-saga-faqs"/>

    <TextView
            android:id="@+id/publisher_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="2dp"
            style="?attr/icEmailDrawable"
            android:gravity="center|left"
            android:clickable="true"
            android:focusable="true"
            android:autoLink="email"
            android:background="@drawable/highlight_overlay"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email: ccsmfeedback@king.com"/>

    <TextView
            android:id="@+id/publisher_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="2dp"
            style="?attr/icWebSiteDrawable"
            android:clickable="true"
            android:focusable="true"
