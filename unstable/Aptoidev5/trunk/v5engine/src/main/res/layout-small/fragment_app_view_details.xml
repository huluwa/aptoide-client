            android:autoLink="web"
            android:background="@drawable/highlight_overlay"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Privacy Policy: http://about.king.com/consumer-terms/terms/privacy"/>

</LinearLayout>


