                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Downloads: 16334"
                    android:layout_gravity="center_horizontal|left"/>

            <TextView
                    android:id="@+id/store_label"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:text="Store: apps"
                    android:layout_gravity="center_horizontal|left"/>

            <TextView
                    android:id="@+id/publisher_label"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:text="Publisher: King.com"
                    android:layout_gravity="center_horizontal|left"/>

            <TextView
                    android:id="@+id/size_label"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall" android:text="Size: 51,34M"
                    android:layout_gravity="center_horizontal|left"/>

            <TextView
                    android:id="@+id/rating_label"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Rating: 4.5/5"
                    android:layout_gravity="center_horizontal|left"/>

            <TextView
                    android:id="@+id/likes_label"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Likes: 45"
                    android:layout_gravity="center_horizontal|left"/>

            <TextView
                    android:id="@+id/dont_likes_label"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Don't Likes: 2"
                    android:layout_gravity="center_horizontal|left"/>
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?attr/custom_color"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:gravity="left"
                android:text="Description" android:layout_gravity="left|center_vertical"/>

        <LinearLayout
