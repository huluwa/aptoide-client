<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="5dp"
              android:background="@drawable/highlight_overlay">


    <TextView style="@style/separator_label"
              android:id="@+id/separator_label"
              android:layout_weight="0.2"
              android:padding="5dp"
              android:gravity="center|left" android:layout_width="0dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update all"
            android:gravity="center"
            android:background="@drawable/abs__list_selector_holo_light"
            android:paddingRight="10dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:paddingLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:id="@+id/more"
            android:clickable="true"
            android:textStyle="italic"
            android:layout_gravity="center_vertical|right"/>


</LinearLayout>