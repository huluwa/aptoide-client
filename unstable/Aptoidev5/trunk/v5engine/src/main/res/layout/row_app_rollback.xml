<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             style="?attr/customRowForeground">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/backgroundCard"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp">


        <TextView
                android:id="@+id/ic_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/rollback"
                android:drawableTop="@drawable/ic_revert"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="right|center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>


        <View android:layout_width="1dip"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray"
              android:layout_toLeftOf="@+id/ic_action" android:id="@+id/view"/>
        <ImageView
                android:id="@+id/app_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"/>
        <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@+id/app_icon" android:layout_toLeftOf="@+id/view"/>
        <TextView
                android:id="@+id/app_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/custom_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_toRightOf="@+id/app_icon"
                android:layout_below="@+id/app_version"/>
        <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/app_name"
                android:layout_toRightOf="@+id/app_icon"
                android:layout_toLeftOf="@+id/view"/>

    </RelativeLayout>
</FrameLayout>