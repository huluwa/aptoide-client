<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:cacheColorHint">@null</item>

    </style>
    <style name="AppBaseThemeDark" parent="@style/Theme.AppCompat">
        <item name="android:cacheColorHint">@null</item>

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="customRowForeground">@style/customRowStyle</item>
        <item name="backgroundCard">@style/backgroundCardStyleLight</item>
        <item name="backgroundTabs">@style/backgroundTabsStyleLight</item>
        <item name="apkInfoBackgroundHeader">@style/apkInfoBackgroundStyleAptoideLight</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Aptoide</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/Widget.Styled.ActionBar.Aptoide</item>
        <item name="android:windowBackground">@color/background_window</item>
        <item name="customColor">@color/custom_color</item>
        <item name="secondaryTextColor">@android:color/tertiary_text_light</item>
        <item name="navigationDrawerColor">@style/navigationDrawerColorLight</item>
        <item name="icRatingGoodDrawable">@style/ratingGoodLight</item>
        <item name="icRatingBadDrawable">@style/ratingBadLight</item>
        <item name="icWebSiteDrawable">@style/webSiteLight</item>
        <item name="icEmailDrawable">@style/emailLight</item>
        <item name="icCancelDrawable">@style/cancelLight</item>
        <item name="icUninstallDrawable">@style/uninstallLight</item>
        <item name="icUpdateDrawable">@style/updateLight</item>
    </style>

    <style name="AppTheme.Dark" parent="AppBaseThemeDark">
        <item name="customRowForeground">@style/customRowStyle</item>
        <item name="backgroundCard">@style/backgroundCardStyleDark</item>
        <item name="backgroundTabs">@style/backgroundTabsStyleDark</item>
        <item name="apkInfoBackgroundHeader">@style/apkInfoBackgroundStyleAptoideDark</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Aptoide</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/Widget.Styled.ActionBar.Aptoide</item>
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="customColor">@color/custom_color</item>
        <item name="secondaryTextColor">@android:color/tertiary_text_dark</item>
        <item name="navigationDrawerColor">@style/navigationDrawerColorDark</item>
        <item name="icRatingGoodDrawable">@style/ratingGoodDark</item>
        <item name="icRatingBadDrawable">@style/ratingBadDark</item>
        <item name="icWebSiteDrawable">@style/webSiteDark</item>
        <item name="icEmailDrawable">@style/emailDark</item>
        <item name="icCancelDrawable">@style/cancelDark</item>
        <item name="icUninstallDrawable">@style/uninstallDark</item>
        <item name="icUpdateDrawable">@style/updateDark</item>
    </style>

    <style name="Widget.Styled.ActionBar.Aptoide" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="icon">@drawable/brand_aptoide_padding</item>
        <item name="background">@drawable/ab_background_aptoide</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:icon">@drawable/brand_aptoide_padding</item>
        <item name="android:background">@drawable/ab_background_aptoide</item>
        <item name="android:displayOptions" tools:ignore="NewApi">showHome|useLogo</item>
    </style>



</resources>