<resources>

    <style name="customRowStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Settings" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Aptoide</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.Aptoide</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>


    <style name="alert_dialog_style_light" parent="android:Theme.Holo.Light.Dialog"/>
    <style name="alert_dialog_style_dark" parent="android:Theme.Holo.Dialog"/>

    <style name="ButtonBarButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="WizardPageTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/customColor</item>
    </style>

    <style name="separatorLabel">
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>