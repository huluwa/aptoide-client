<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FeedBackActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/FeedBackSubject"
        android:hint="@string/FeedBackSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:id="@+id/FeedBacktext"
        android:layout_below="@+id/FeedBackSubject"
        android:hint="@string/FeedBackToWrite"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>

    <CheckBox
        android:id="@+id/FeedBackCheckBox"
        android:text="@string/FeedBackCheckBoxText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_above="@+id/FeedBackSendButton"
        />

    <Button
        android:text="@string/FeedBackSendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FeedBackSendButton"
        android:layout_alignParentBottom="true"
        android:onClick="FeedBackSendMail"/>

</LinearLayout>
