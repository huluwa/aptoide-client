<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">


        <TextView
                style="@style/titleLabel"
                android:text="@string/specs"/>

        <LinearLayout
                style="?attr/backgroundCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/min_sdk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="5.0dp"
                    android:paddingLeft="5.0dp"
                    android:paddingRight="5.0dp"
                    android:text="Min SDK: 16"/>

            <TextView
                    android:id="@+id/min_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="5.0dp"
                    android:paddingLeft="5.0dp"
                    android:paddingRight="5.0dp"
                    android:text="Min Screen: Small"/>
        </LinearLayout>
        <TextView
                style="@style/titleLabel"
                android:text="@string/permissions"/>

        <LinearLayout
                android:id="@+id/permissionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="?attr/backgroundCard"
                android:visibility="gone"
                android:orientation="vertical">
        </LinearLayout>

        <ProgressBar android:id="@+id/loadingPb" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge" android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</ScrollView>