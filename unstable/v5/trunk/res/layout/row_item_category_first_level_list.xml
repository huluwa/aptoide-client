<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical" android:padding="10dp">

    <ImageView
            android:id="@+id/category_first_level_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null" android:layout_gravity="center_vertical"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1"
            android:layout_gravity="center_vertical">

        <TextView
                android:id="@+id/category_first_level_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/category_first_level_desc"
                android:layout_gravity="left|center_vertical"
                android:maxLines="2"
                android:ellipsize="end"/>

    </LinearLayout>

    <TextView
            android:id="@+id/category_first_level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center"/>
</LinearLayout>

