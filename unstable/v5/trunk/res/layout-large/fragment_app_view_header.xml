<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/app_view_header"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/app_view_header_portrait_bgd">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp" android:layout_weight="1">

        <ImageView
                android:id="@+id/app_view_header_avatar"
                android:src="@drawable/top_candycrush"
                android:contentDescription="@null"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_gravity="center">

            <TextView
                    android:id="@+id/app_view_header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Candy Crush"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                    android:id="@+id/app_view_header_categ2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Category: Casual"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/app_view_header_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Version: 1.16.0"
                        android:layout_marginRight="3dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                        android:id="@+id/getLatest"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="2dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/custom_color"
                        android:textStyle="bold"
                        android:text="@string/get_latest" />
            </LinearLayout>


            <RatingBar
                    android:id="@+id/ratingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:numStars="5"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="5dp"
            android:orientation="horizontal" android:layout_weight="2">

        <LinearLayout
                android:id="@+id/badge_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_toLeftOf="@+id/install"
                android:layout_weight="1" android:orientation="vertical" android:layout_alignBottom="@+id/install"
                android:layout_alignTop="@+id/install">

            <ImageView
                    android:id="@+id/app_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/badge_green"
                    android:contentDescription="@null"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/app_badge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:text="Trusted"
                    android:textSize="12sp"/>
        </LinearLayout>
        <Button
                style="@style/custom_button_style"
                android:text="Install"
                android:id="@+id/install"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>