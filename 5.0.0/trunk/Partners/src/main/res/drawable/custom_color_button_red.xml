<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
            <solid android:color="@color/dark_custom_gray" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/red" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/dark_custom_color_red" android:startColor="@color/light_custom_color_red" />
        </shape></item>

</selector>